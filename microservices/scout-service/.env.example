# TalentAI - Scout Service (Talent Discovery Specialist) Environment Variables
# Copy this file to .env and fill in the values

# GitHub API Token - Get from https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ContactOut API Token - Get from https://contactout.com
CONTACTOUT_API_TOKEN=your_contactout_token_here

# Ollama URL for AI query formatting (optional)
OLLAMA_URL=http://localhost:11434

# Service Configuration
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0

# Service URLs (internal Docker network)
AVATAR_SERVICE_URL=http://avatar-service:80
CONVERSATION_SERVICE_URL=http://conversation-service:80
VOICE_SERVICE_URL=http://voice-service:80
INTERVIEW_SERVICE_URL=http://interview-service:80

# Agent Configuration
AGENT_NAME=scout
SERVICE_NAME=scout-service
# Agent Discovery Configuration (NEW - December 13, 2025)
AGENT_DISCOVERY_PATH=/home/asif1/open-talent/agents
AGENT_HEALTH_CHECK_INTERVAL=30
AGENT_TIMEOUT=30
AGENT_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json