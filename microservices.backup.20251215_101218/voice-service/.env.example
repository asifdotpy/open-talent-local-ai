# TalentAI Voice Service Environment Variables
# Copy this file to .env and fill in the values

# Service Configuration
SERVICE_NAME=voice-service
SERVICE_PORT=8002
HOST=0.0.0.0

# OpenAI TTS Configuration (Production)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy

# Vosk STT Configuration
VOSK_MODEL_PATH=models/vosk-model-small-en-us-0.15

# Silero VAD Configuration
SILERO_MODEL_PATH=models/silero_vad.onnx

# Audio Processing
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
MAX_AUDIO_LENGTH=300  # seconds
AUDIO_FORMAT=wav

# File Upload Settings
MAX_UPLOAD_SIZE=50MB
ALLOWED_AUDIO_TYPES=mp3,wav,flac,m4a

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/voice_service.log

# Performance Tuning
MAX_WORKERS=2
BATCH_SIZE=1

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10