# AI Orchestra Simulation Environment Configuration
# Copy this file to .env and adjust values as needed

# Node Environment
NODE_ENV=production

# Video Configuration
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=30

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Logging
LOG_LEVEL=info

# Session Management
MAX_SESSIONS=100
SESSION_TIMEOUT=300000

# CORS Configuration
CORS_ORIGINS=*

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_VIDEO_RENDERING=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true

# Model Configuration
MODEL_PATH=./assets/models/face.glb

# Performance Settings
FRAME_BUFFER_SIZE=30
HEARTBEAT_INTERVAL=30000
