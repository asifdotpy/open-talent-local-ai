{
  "name": "@open-talent/ai-orchestra-simulation",
  "version": "1.0.0",
  "description": "AI Orchestra - Real-Time Vectorial Facial Animation Engine",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./core/*": "./src/core/*.js",
    "./animation/*": "./src/animation/*.js",
    "./ui/*": "./src/ui/*.js",
    "./utils/*": "./src/utils/*.js",
    "./network/*": "./src/network/*.js",
    "./config/*": "./src/config/*.js",
    "./renderer/*": "./src/renderer/*.js",
    "./server/*": "./src/server/*.js",
    "./video/*": "./src/video/*.js"
  },
  "scripts": {
    "start": "node avatar-renderer-v2.js",
    "dev": "python3 -m http.server 9000",
    "serve": "python3 -m http.server 9000",
    "renderer": "node avatar-renderer-v2.js",
    "renderer:production": "NODE_ENV=production node avatar-renderer-v2.js",
    "streamer": "node voice-to-avatar-streamer.js",
    "stream": "node voice-to-avatar-streamer.js stream",
    "analyze-vertices": "node tools/vertex-analyzer.js",
    "analyze-morphs": "node tools/analyze-morph-targets.js",
    "validate-animation": "node tools/validate-animation-pipeline.js",
    "test:e2e-face-glb": "node tests/e2e-face-glb.js",
    "validate-lip-sync": "node tools/validate-lip-sync.js",
    "test:renderer": "cd ../microservices/avatar-service/renderer && node test-renderer.js",
    "build": "echo 'Build process will be implemented in Phase 2'",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "node tests/svg-math.test.js",
    "test:all": "node tests/comprehensive.test.js",
    "test:core": "node tests/e2e-face-glb.js",
    "test:server": "curl -s http://localhost:3001/health && echo 'Server healthy'",
    "test:performance": "node tools/validate-lip-sync.js",
    "test:unit": "bash tests/run-all-tests.sh --unit",
    "test:integration": "bash tests/run-all-tests.sh --integration",
    "test:e2e": "bash tests/run-all-tests.sh --e2e",
    "test:quick": "bash tests/run-all-tests.sh --quick",
    "test:suite": "bash tests/run-all-tests.sh all",
    "test:avatar-integration": "node test-avatar-integration.js",
    "test:avatar-simple": "./test-avatar-integration-simple.sh",
    "test:avatar-full": "./run-integration-tests.sh",
    "test:unit:core": "node tests/unit-core.test.js",
    "test:unit:animation": "node tests/unit-animation.test.js",
    "test:integration:config": "node tests/integration-config.test.js",
    "test:integration:server": "node tests/integration-server.test.js",
    "docs": "echo 'OpenAPI docs available at http://localhost:3001/docs'"
  },
  "keywords": [
    "three.js",
    "facial-animation",
    "webgl",
    "real-time-rendering",
    "svg-animation",
    "ai",
    "remotion"
  ],
  "author": "AI Orchestra Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/ai-orchestra-simulation.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "dependencies": {
    "@gltf-transform/core": "^4.1.0",
    "@gltf-transform/extensions": "^4.1.0",
    "axios": "^1.13.2",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "meshoptimizer": "^0.21.0",
    "node-fetch": "^3.3.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "three": "^0.160.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "chai": "^4.3.10",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.2.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "ws": "^8.17.1"
  },
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ]
}
