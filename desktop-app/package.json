{
  "name": "opentalent-desktop",
  "version": "0.1.0",
  "description": "OpenTalent - Local AI Interview Platform",
  "author": "OpenTalent Contributors",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build-ts": "tsc",
    "start": "cross-env FORCE_PROD=1 npm run build-ts && npx react-scripts build && electron dist/main/main.js",
    "dev": "concurrently \"npm run dev-react\" \"npm run dev-electron\"",
    "dev-react": "react-scripts start",
    "dev-electron": "npm run build-ts && wait-on http://localhost:3000 && electron dist/main/main.js --dev",
    "build": "npm run build-ts && npx react-scripts build",
    "build-electron": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.30",
    "@types/recordrtc": "^5.6.15",
    "@types/three": "^0.182.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.6.2",
    "better-sqlite3": "^12.5.0",
    "crypto-js": "^4.2.0",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^12.23.26",
    "gsap": "^3.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^11.0.5",
    "recordrtc": "^5.6.2",
    "three": "^0.182.0",
    "wavesurfer.js": "^7.12.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-scripts": "5.0.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "extends": null,
    "appId": "com.opentalent.app",
    "productName": "OpenTalent",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "extraMetadata": {
      "main": "dist/main/main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
