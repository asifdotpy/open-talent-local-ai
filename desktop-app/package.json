{
  "name": "opentalent-desktop",
  "version": "0.1.0",
  "description": "OpenTalent - Local AI Interview Platform",
  "author": "OpenTalent Contributors",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build-ts": "tsc",
    "start": "cross-env FORCE_PROD=1 npm run build-ts && npx react-scripts build && electron dist/main/main.js",
    "dev": "concurrently \"npm run dev-react\" \"npm run dev-electron\"",
    "dev-react": "react-scripts start",
    "dev-electron": "npm run build-ts && wait-on http://localhost:3000 && electron dist/main/main.js --dev",
    "build": "npm run build-ts && npx react-scripts build",
    "build-electron": "npm run build && electron-builder",
    "test": "react-scripts test --watchAll=false"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "react-scripts": "5.0.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "extends": null,
    "appId": "com.opentalent.app",
    "productName": "OpenTalent",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "extraMetadata": {
      "main": "dist/main/main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
