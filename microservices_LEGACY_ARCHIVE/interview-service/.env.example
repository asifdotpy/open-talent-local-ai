# OpenTalent Interview Service Environment Variables
# Copy this file to .env and fill in the values

# Service Configuration
SERVICE_NAME=interview-service
SERVICE_PORT=8004
HOST=0.0.0.0

# ============================================
# Natural Language Question Builder (Phase 1)
# ============================================
# vLLM Configuration (high-performance inference engine)
# vLLM provides OpenAI-compatible API for local models
VLLM_BASE_URL=http://localhost:8000
VLLM_MODEL=granite4:350m-h

# Qdrant Vector Database (lightweight, works on low-end hardware)
# For semantic search and question similarity
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=interview_questions

# Service URLs (internal Docker network)
CONVERSATION_SERVICE_URL=http://conversation-service:80
VOICE_SERVICE_URL=http://voice-service:80
AVATAR_SERVICE_URL=http://avatar-service:80
SOURCER_AGENT_URL=http://sourcer-agent-service:80

# Database Configuration (if needed)
DATABASE_URL=postgresql://talent_user:${POSTGRES_PASSWORD}@postgres:5432/talent_ai_interview

# Redis Configuration (if needed)
REDIS_URL=redis://redis:6379

# Interview Settings
MAX_INTERVIEW_DURATION=3600  # seconds
DEFAULT_QUESTION_TIMEOUT=120  # seconds
MAX_RETRIES_PER_QUESTION=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/interview_service.log

# Performance Tuning
MAX_CONCURRENT_INTERVIEWS=10
REQUEST_TIMEOUT=60

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
